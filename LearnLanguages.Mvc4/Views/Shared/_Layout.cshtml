      </div>
          
      <!--Content-->
      <div data-role="content">
        @RenderBody()
      </div>
        
      <div>
        @Html.Partial("_NavPartial")
      </div>
    </div>

    @Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile")
    @RenderSection("scripts", required: false)
